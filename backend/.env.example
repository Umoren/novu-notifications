# Server Configuration
PORT=3000
NODE_ENV=development

# Novu Configuration (from your self-hosted instance)
NOVU_API_KEY=your_novu_api_key_here
NOVU_APP_ID=your_novu_app_id_here

# Upstash QStash Configuration
UPSTASH_QSTASH_TOKEN=your_qstash_token_here
UPSTASH_QSTASH_CURRENT_SIGNING_KEY=your_current_signing_key
UPSTASH_QSTASH_NEXT_SIGNING_KEY=your_next_signing_key

# Resend Configuration
RESEND_API_KEY=your_resend_api_key_here

# Webhook URL for QStash callbacks
WEBHOOK_URL=https://your-domain.com/api/notifications

